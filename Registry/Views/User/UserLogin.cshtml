@model Registry.Models.user

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form class="user" id="UserLogin" action="UserLogin" method="Post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!-- Username -->
    <div class="form-group">
        <input type="text" class="form-control form-control-user" id="userId" name="userId" required="required" aria-describedby="Username" placeholder="Enter username">
        @Html.ValidationMessageFor(model => model.userId)
    </div>

    <!-- Password -->
    <div class="form-group">
        <input type="password" class="form-control form-control-user" name="password" id="password" required="required" placeholder="*********">
        @Html.ValidationMessageFor(model => model.password)
    </div>


    <!-- Remember me checkbox and sign in button -->
    <div class="form-group">
        <div class="custom-control custom-checkbox small">
            <input type="checkbox" class="custom-control-input" id="customCheck">
            <label class="custom-control-label" for="customCheck">Remember Me</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block">Sign in</button>
    
    <hr>

</form>