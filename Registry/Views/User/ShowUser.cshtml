@model IEnumerable<Registry.Models.user>

@{
    ViewBag.Title = "ShowUser";
    Layout = "~/Views/Shared/_FileLayout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">Users</h5>
    </div>
    <div class="card-header">
        <h6>
            <a class="btn btn-primary" href="/User/CreateUser">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New User</span>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
               
                <thead>
                    <tr>
                        <th>
                            #
                        </th>

                        <th>
                            Last name
                        </th>
                        <th>
                            First name
                        </th>
                        <th>
                            Middle name
                        </th>
                        <th>
                            Phone number
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(counter++)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.lastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.firstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.middleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phoneNumber)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Edit", new { id=item.userId })" class="btn btn-warning my-2 my-sm-0">Edit</a>
                                <a href="@Url.Action("Details", "UserDetails", new { id = item.userId })" class="btn btn-info my-2 my-sm-0">Edit</a>
                                <a href="@Url.Action("Delete", "Delete", new { id = item.userId })" class="btn btn-danger my-2 my-sm-0">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
                

            </table>
        </div>
     </div>
</div>